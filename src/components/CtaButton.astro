---
interface Props {
	href: string;
	title: string;
	subtitle?: string;
  variant?: 'primary' | 'secondary';
}

const { href, title, subtitle, variant = 'primary' } = Astro.props;

const baseStyles = "group relative flex flex-col items-center justify-center w-full sm:w-auto px-8 py-3.5 text-center font-semibold transition-all duration-200 rounded-lg shadow-sm active:scale-95";

const variants = {
  primary: "bg-[var(--primary)] text-[var(--primary-fg)] hover:opacity-90",
  secondary: "bg-[var(--bg-card)] text-[var(--text-main)] border border-[var(--border-color)] hover:bg-[var(--bg-main)]"
};
---

<a href={href} class={`${baseStyles} ${variants[variant]}`} target="_blank" rel="nofollow noopener noreferrer">
	<span class="text-base">{title}</span>
	{subtitle && <span class="text-xs opacity-70 font-normal">{subtitle}</span>}
</a>
