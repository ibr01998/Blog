---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SpeedInsights from "@vercel/speed-insights/astro";

import '../styles/global.css';
import '@fontsource/outfit/300.css';
import '@fontsource/outfit/400.css';
import '@fontsource/outfit/500.css';
import '@fontsource/outfit/600.css';
import '@fontsource/outfit/700.css';
import '@fontsource/outfit/800.css';

interface Props {
    title: string;
    description: string;
    pubDate?: Date;
    updatedDate?: Date;
    heroImage?: string;
}

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!doctype html>
<html lang="nl" class="h-full antialiased">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
    <style>
      .prose { max-width: 65ch; }
      .prose h2 {
        color: var(--navy);
        margin-top: 2.5em;
        margin-bottom: 0.75em;
        font-size: 1.5rem;
        font-weight: 800;
      }
      .prose h3 {
        color: var(--navy);
        margin-top: 1.5em;
        margin-bottom: 0.5em;
        font-size: 1.25rem;
        font-weight: 700;
      }
      .prose p {
        margin-bottom: 1.25em;
        line-height: 1.85;
        color: #3a4a5c;
      }
      .prose ul, .prose ol {
        margin-bottom: 1.25em;
        padding-left: 1.5em;
        color: #3a4a5c;
      }
      .prose ul { list-style-type: disc; }
      .prose li { margin-bottom: 0.5em; }
      .prose li::marker { color: var(--navy); }
      .prose strong {
        color: var(--navy);
        font-weight: 700;
      }
      .prose a {
        color: var(--navy);
        text-decoration: underline;
        text-underline-offset: 3px;
        text-decoration-color: rgba(27,45,79,0.3);
        font-weight: 600;
      }
      .prose a:hover { opacity: 0.6; }
      .prose blockquote {
        border-left: 3px solid var(--navy);
        padding-left: 1em;
        font-style: italic;
        color: var(--text-muted);
      }
    </style>
	</head>
	<body class="flex flex-col min-h-screen font-outfit text-navy">
		<Header />
		<main class="flex-grow">
            <!-- Hero Image -->
            {heroImage && (
            <div class="relative w-full h-[320px] md:h-[450px] overflow-hidden duotone-navy">
                <img width={1920} height={1080} src={heroImage} alt="" class="w-full h-full object-cover" />
            </div>
            )}

            <!-- Article Header -->
            <div class="bg-solid px-4 py-10 md:py-14">
                <div class="container mx-auto max-w-4xl">
                    {pubDate && (
                        <span class="date-badge mb-5 inline-block">
                            {pubDate.toLocaleDateString('nl-NL', {
                                day: 'numeric', month: 'long', year: 'numeric'
                            })}
                        </span>
                    )}
                    <h1 class="text-4xl md:text-6xl font-extrabold text-navy leading-[1.1] tracking-tight mb-6">
                        {title}
                    </h1>
                    <p class="text-muted text-sm">Redactie Â· 6 min leestijd</p>
                </div>
            </div>

            <div class="section-divider"></div>

            <!-- Article Content -->
            <div class="bg-solid container mx-auto px-4 py-12 md:py-16 max-w-4xl">
                <article class="prose prose-lg mx-auto">
                    <slot />
                </article>
            </div>
		</main>
		<Footer />
		<SpeedInsights />
	</body>
</html>
