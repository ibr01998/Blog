---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { getCollection } from 'astro:content';
import { db, Post } from 'astro:db';

const filePosts = await getCollection('blog');
const dbPosts = await db.select().from(Post);

const posts = [
  ...filePosts.map((p) => ({ ...p, source: 'file' })),
  ...dbPosts.map((p) => ({
    slug: p.slug,
    source: 'db',
    data: {
      title: p.title,
      description: p.description,
      pubDate: p.pubDate,
      article_type: p.article_type,
      status: p.status // Add status
    }
  })),
].sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<DashboardLayout title="Artikelen" activePage="dashboard">
  
  <!-- Stats Row -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
    <div class="bg-gray-900 rounded-xl border border-gray-800 p-5">
      <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Totaal Artikelen</p>
      <p class="text-2xl font-bold text-white">{posts.length}</p>
    </div>
    <div class="bg-gray-900 rounded-xl border border-gray-800 p-5">
      <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Gepubliceerd</p>
      <p class="text-2xl font-bold text-green-400">{posts.length}</p>
    </div>
    <div class="bg-gray-900 rounded-xl border border-gray-800 p-5">
      <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Concept</p>
      <p class="text-2xl font-bold text-gray-500">0</p>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-lg font-semibold text-white">Alle Artikelen</h2>
    <a
      href="/dashboard/new"
      class="bg-yellow-500/90 hover:bg-yellow-500 text-gray-900 font-semibold py-2 px-4 rounded-lg transition-all duration-200 text-sm flex items-center gap-2"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Nieuw Artikel
    </a>
  </div>

  <!-- Article List -->
  {posts.length === 0 ? (
    <div class="bg-gray-900 rounded-xl border border-gray-800 p-12 text-center">
      <div class="w-12 h-12 rounded-xl bg-gray-800 mx-auto mb-4 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <p class="text-gray-500 text-sm">Nog geen artikelen. Maak je eerste artikel aan!</p>
    </div>
  ) : (
    <div class="bg-gray-900 rounded-xl border border-gray-800 overflow-hidden">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-gray-800">
            <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wide px-5 py-3">Titel</th>
            <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wide px-5 py-3 hidden md:table-cell">Type</th>
            <th class="text-left text-xs font-medium text-gray-500 uppercase tracking-wide px-5 py-3 hidden sm:table-cell">Datum</th>
            <th class="text-right text-xs font-medium text-gray-500 uppercase tracking-wide px-5 py-3">Acties</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-800/50">
          {posts.map((post) => (
            <tr class="hover:bg-gray-800/30 transition-colors">
              <td class="px-5 py-3.5">
                <div>
                  <p class="font-medium text-white truncate max-w-xs">{post.data.title}</p>
                  <p class="text-xs text-gray-500 mt-0.5 truncate max-w-xs">{post.data.description}</p>
                </div>
              </td>
              <td class="px-5 py-3.5 hidden md:table-cell">
                <span class="inline-flex items-center px-2 py-0.5 text-xs rounded-full bg-blue-500/10 text-blue-400 border border-blue-500/20">
                  {post.data.article_type || 'comparison'}
                </span>
                
                {post.data.status === 'draft' && (
                  <span class="inline-flex items-center ml-2 px-2 py-0.5 text-xs rounded-full bg-gray-700 text-gray-300 border border-gray-600">
                    Draft
                  </span>
                )}
                {post.source === 'file' && (
                   <span class="inline-flex items-center ml-2 px-2 py-0.5 text-xs rounded-full bg-purple-500/10 text-purple-400 border border-purple-500/20">
                    File
                  </span>
                )}
              </td>
              <td class="px-5 py-3.5 text-gray-400 hidden sm:table-cell">
                {post.data.pubDate.toLocaleDateString('nl-NL', { day: 'numeric', month: 'short', year: 'numeric' })}
              </td>
              <td class="px-5 py-3.5 text-right">
                <div class="flex items-center justify-end gap-2">
                  <a href={`/blog/${post.slug}`} target="_blank" class="p-2 text-gray-500 hover:text-white transition-colors" title="Bekijk">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  </a>
                  
                  {post.source === 'db' && (
                    <>
                      <a href={`/dashboard/edit?slug=${post.slug}`} class="p-2 text-gray-500 hover:text-yellow-500 transition-colors" title="Bewerken">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      </a>
                      
                      <button 
                        class="toggle-status-btn p-2 text-gray-500 hover:text-blue-400 transition-colors" 
                        title={post.data.status === 'published' ? 'Zet offline' : 'Publiceer'}
                        data-slug={post.slug}
                        data-status={post.data.status}
                      >
                         {post.data.status === 'published' ? (
                           <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                           </svg>
                         ) : (
                           <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                           </svg>
                         )}
                      </button>

                      <button 
                        class="delete-btn p-2 text-gray-500 hover:text-red-500 transition-colors" 
                        title="Verwijderen"
                        data-slug={post.slug}
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      </button>
                    </>
                  )}
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  )}
  
  <script>
    // Handle Delete
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        if(!confirm('Weet je zeker dat je dit artikel wilt verwijderen? Dit kan niet ongedaan worden gemaakt.')) return;
        
        const slug = e.currentTarget.dataset.slug;
        try {
          const res = await fetch(`/api/articles/${slug}`, { method: 'DELETE' });
          if(res.ok) {
            window.location.reload();
          } else {
            alert('Fout bij verwijderen');
          }
        } catch(err) {
          console.error(err);
          alert('Er ging iets mis');
        }
      });
    });

    // Handle Status Toggle (Publish/Unpublish)
    document.querySelectorAll('.toggle-status-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const slug = e.currentTarget.dataset.slug;
        const currentStatus = e.currentTarget.dataset.status;
        const newStatus = currentStatus === 'published' ? 'draft' : 'published';
        
        try {
          const res = await fetch(`/api/articles/${slug}`, { 
            method: 'PATCH',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({ status: newStatus })
          });
          
          if(res.ok) {
            window.location.reload();
          } else {
            alert('Fout bij status wijzigen');
          }
        } catch(err) {
          console.error(err);
          alert('Er ging iets mis');
        }
      });
    });
  </script>
