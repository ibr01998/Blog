---
import Layout from '../layouts/Layout.astro';
import CtaButton from '../components/CtaButton.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { db, Post } from 'astro:db';

const filePosts = await getCollection('blog');
const dbPosts = await db.select().from(Post);

const posts = [
  ...filePosts.map((p) => ({ ...p.data, slug: p.slug, source: 'file' })),
  ...dbPosts.map((p) => ({
    title: p.title,
    description: p.description,
    pubDate: p.pubDate,
    heroImage: p.heroImage,
    slug: p.slug,
    source: 'db',
  })),
].sort((a, b) => b.pubDate.valueOf() - a.pubDate.valueOf());
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <!-- Hero Section -->
    <section class="relative py-20 md:py-28 px-4 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-gray-900 to-gray-950 z-0"></div>
    <div class="container mx-auto relative z-10 text-center max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-6 leading-tight tracking-tight">
        Crypto Exchange <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-600">Vergelijkingen</span> voor <br class="hidden md:block" />Nederlandse Traders
        </h1>
        <p class="text-lg md:text-xl text-gray-400 mb-10 max-w-2xl mx-auto leading-relaxed">
        Eerlijke reviews en vergelijkingen van crypto exchanges. We testen platformen zelf en delen onze bevindingen, zodat jij een weloverwogen keuze kunt maken.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CtaButton href="/blog/100x-leverage-nederland" title="Lees: BitMEX vs Bybit" subtitle="Onze nieuwste vergelijking" />
        </div>
    </div>
    </section>

    <!-- Latest Articles -->
    <section class="py-16 px-4 bg-gray-950">
    <div class="container mx-auto max-w-5xl">
        <h2 class="text-2xl font-bold text-white mb-10 text-center">Nieuwste Artikelen</h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
            posts.map((post) => (
            <article class="bg-gray-900 rounded-xl overflow-hidden shadow-lg border border-gray-800 hover:border-gray-700 transition-all duration-300 group">
                <a href={`/blog/${post.slug}/`} class="block h-full">
                <img width={720} height={360} src={post.data.heroImage || "/blog-placeholder-1.jpg"} alt="" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500" />
                <div class="p-6">
                    <h3 class="text-lg font-bold text-white mb-2 group-hover:text-yellow-400 transition-colors">
                    {post.data.title}
                    </h3>
                    <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                    {post.data.description}
                    </p>
                    <span class="text-yellow-500 text-sm font-medium flex items-center gap-1">
                    Lees artikel →
                    </span>
                </div>
                </a>
            </article>
            ))
        }
        </div>
    </div>
    </section>

    <!-- About Section -->
    <section class="py-14 px-4 border-t border-gray-900 bg-gray-900/30">
    <div class="container mx-auto text-center max-w-2xl">
        <h3 class="text-xl font-bold text-white mb-3">Over ShortNews</h3>
        <p class="text-gray-400 text-sm leading-relaxed">
        Wij testen crypto exchanges met echt geld en delen eerlijke, onafhankelijke vergelijkingen. Geen hype, geen overdreven beloftes — gewoon de feiten zodat jij je eigen keuze kunt maken.
        </p>
    </div>
    </section>
</Layout>
