---

import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;
if (!slug) {
	return Astro.redirect('/404');
}

const posts = await getCollection('blog');
const post = posts.find((p) => p.slug === slug);

if (!post) {
	return Astro.redirect('/404');
}

const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description} image={post.data.heroImage}>
    <!-- Hero Banner -->
    <div class="relative w-full h-[400px] md:h-[500px] overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-t from-gray-950 via-gray-950/50 to-transparent z-10"></div>
        {post.data.heroImage && <img width={1920} height={1080} src={post.data.heroImage} alt="" class="absolute inset-0 w-full h-full object-cover" />}
        
        <div class="absolute bottom-0 left-0 w-full z-20 pb-12 pt-32 px-4">
            <div class="container mx-auto max-w-6xl">
                <div class="max-w-3xl">
                    <div class="flex items-center gap-4 mb-4 text-sm font-semibold">
                        <span class="bg-yellow-500/10 text-yellow-500 px-3 py-1 rounded-full border border-yellow-500/20 backdrop-blur-sm animate-pulse-slow">
                            üî• Trending
                        </span>
                        <span class="text-gray-300 flex items-center gap-2">
                           <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                           </svg>
                           5 min leestijd
                        </span>
                    </div>
                    <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 leading-tight tracking-tight drop-shadow-xl">
                        {post.data.title}
                    </h1>
                     <div class="flex gap-4 text-sm text-gray-400 items-center">
                        <img src="/blog-placeholder-1.jpg" alt="Author" class="w-10 h-10 rounded-full border-2 border-gray-800" />
                        <div>
                            <p class="text-gray-200 font-medium">Crypto Redactie</p>
                            <time datetime={post.data.pubDate.toISOString()}>
                                {post.data.pubDate.toLocaleDateString('nl-NL', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric',
                                })}
                            </time>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mx-auto max-w-6xl px-4 py-12">
        <div class="flex flex-col lg:flex-row gap-12">
            
            <!-- Main Content -->
            <article class="lg:w-2/3">
                <div class="prose prose-invert prose-lg max-w-none 
                    prose-headings:font-bold prose-headings:text-white prose-headings:tracking-tight
                    prose-p:text-gray-300 prose-p:leading-8 prose-p:text-lg
                    prose-a:text-yellow-500 prose-a:no-underline hover:prose-a:underline
                    prose-strong:text-white prose-strong:font-semibold
                    prose-li:text-gray-300 prose-blockquote:border-yellow-500 prose-blockquote:bg-gray-900/50 prose-blockquote:p-4 prose-blockquote:rounded-r-lg
                    prose-img:rounded-xl prose-img:shadow-2xl font-light">
                    <Content />
                </div>
                
                <!-- Bottom CTA -->
                <div class="mt-16 p-8 bg-gradient-to-br from-yellow-900/20 to-gray-900 border border-yellow-500/20 rounded-2xl text-center">
                    <h3 class="text-2xl font-bold text-white mb-4">Klaar om te beginnen?</h3>
                    <p class="text-gray-300 mb-8 max-w-xl mx-auto">Profiteer van de volatiliteit. Start vandaag nog met handelen op de beste platforms.</p>
                     <a href="/go/bitmex" target="_blank" class="inline-block bg-gradient-to-r from-yellow-500 to-yellow-600 text-gray-950 font-bold py-4 px-8 rounded-full text-lg shadow-lg shadow-yellow-500/20 hover:shadow-yellow-500/40 transform hover:-translate-y-0.5 transition-all duration-300 text-center">
                        Start Met 100x Leverage &rarr;
                     </a>
                </div>
            </article>

            <!-- Sidebar / Sticky Widget -->
            <aside class="lg:w-1/3 space-y-8">
                <div class="sticky top-8 space-y-8">
                    <!-- Conversion Widget -->
                    <div class="bg-gray-900 rounded-2xl p-6 border border-gray-800 shadow-2xl">
                        <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
                             <span class="w-2 h-8 bg-yellow-500 rounded-full"></span>
                             Top Exchanges
                        </h3>
                        
                        <div class="space-y-4">
                            <a href="/go/bitmex" class="flex items-center gap-4 p-4 rounded-xl bg-gray-950/50 hover:bg-gray-800 border border-gray-800 hover:border-yellow-500/30 transition-all group">
                                <div class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center text-xl font-bold text-white group-hover:text-yellow-500">1</div>
                                <div class="flex-1">
                                    <h4 class="font-bold text-white group-hover:text-yellow-400 transition-colors">BitMEX</h4>
                                    <p class="text-xs text-green-400 font-medium">De "OG" van Crypto</p>
                                </div>
                                <div class="text-yellow-500 font-bold">&rarr;</div>
                            </a>
                             <a href="/go/bybit" class="flex items-center gap-4 p-4 rounded-xl bg-gray-950/50 hover:bg-gray-800 border border-gray-800 hover:border-yellow-500/30 transition-all group">
                                <div class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center text-xl font-bold text-white group-hover:text-yellow-500">2</div>
                                <div class="flex-1">
                                    <h4 class="font-bold text-white group-hover:text-yellow-400 transition-colors">Bybit</h4>
                                    <p class="text-xs text-green-400 font-medium">Snel & Modern</p>
                                </div>
                                <div class="text-yellow-500 font-bold">&rarr;</div>
                            </a>
                        </div>
                         <div class="mt-6 pt-6 border-t border-gray-800 text-center">
                             <p class="text-xs text-gray-500 mb-2">Beperkte tijd beschikbaar</p>
                             <a href="/go/bitmex" class="block w-full bg-white/10 hover:bg-white/20 text-white font-semibold py-3 rounded-lg transition-colors border border-white/10">
                                 Claim Bonus
                             </a>
                         </div>
                    </div>

                    <!-- Trust Box -->
                     <div class="bg-gradient-to-br from-blue-900/10 to-gray-900 rounded-2xl p-6 border border-blue-500/10">
                        <h4 class="font-bold text-white mb-2">üõ°Ô∏è Veilig Handelen</h4>
                        <p class="text-sm text-gray-400 leading-relaxed">
                            Wij promoten alleen exchanges die wij zelf uitvoerig hebben getest met echt geld. Trade verstandig.
                        </p>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</Layout>
