---

import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const { slug } = Astro.params;
if (!slug) {
	return Astro.redirect('/404');
}

const posts = await getCollection('blog');
const post = posts.find((p) => p.slug === slug);

if (!post) {
	return Astro.redirect('/404');
}

const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description} image={post.data.heroImage} type="article">
    <!-- Hero Banner -->
    <div class="relative w-full h-[340px] md:h-[420px] overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-t from-gray-950 via-gray-950/60 to-gray-950/20 z-10"></div>
        {post.data.heroImage && <img width={1920} height={1080} src={post.data.heroImage} alt="" class="absolute inset-0 w-full h-full object-cover" />}
        
        <div class="absolute bottom-0 left-0 w-full z-20 pb-10 pt-24 px-4">
            <div class="container mx-auto max-w-4xl">
                 <!-- Breadcrumbs -->
                 <nav class="flex text-sm text-gray-400 mb-5" aria-label="Breadcrumb">
                    <ol class="inline-flex items-center space-x-1 md:space-x-3">
                        <li class="inline-flex items-center">
                            <a href="/" class="hover:text-yellow-500 transition-colors">Home</a>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <svg class="w-3 h-3 text-gray-500 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                                </svg>
                                <span class="ml-1 text-sm font-medium text-gray-400 md:ml-2">Blog</span>
                            </div>
                        </li>
                        <li aria-current="page">
                            <div class="flex items-center">
                                <svg class="w-3 h-3 text-gray-500 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                                </svg>
                                <span class="ml-1 text-sm font-medium text-yellow-500 md:ml-2 truncate max-w-[200px] md:max-w-xs">{post.data.title}</span>
                            </div>
                        </li>
                    </ol>
                </nav>

                <h1 class="text-3xl md:text-5xl font-extrabold text-white mb-5 leading-tight tracking-tight">
                    {post.data.title}
                </h1>
                 <div class="flex gap-4 text-sm text-gray-400 items-center">
                    <div class="w-10 h-10 rounded-full bg-gray-800 border border-gray-700 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-gray-200 font-medium">Redactie</p>
                        <div class="flex items-center gap-3">
                            <time datetime={post.data.pubDate.toISOString()}>
                                {post.data.pubDate.toLocaleDateString('nl-NL', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric',
                                })}
                            </time>
                            <span class="text-gray-600">Â·</span>
                            <span class="text-gray-400 flex items-center gap-1">
                               <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                               </svg>
                               6 min leestijd
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mx-auto max-w-6xl px-4 py-16">
        <div class="flex flex-col lg:flex-row gap-16">
            
            <!-- Main Content -->
            <article class="lg:w-2/3 article-content">
                <Content />
            </article>

            <!-- Sidebar -->
            <aside class="lg:w-1/3 space-y-8">
                <div class="sticky top-8 space-y-6">
                    <!-- Platforms in this article -->
                    <div class="bg-gray-900 rounded-2xl p-6 border border-gray-800">
                        <h3 class="text-lg font-semibold text-white mb-5 flex items-center gap-2">
                             <span class="w-1.5 h-6 bg-yellow-500/80 rounded-full"></span>
                             Platformen in dit artikel
                        </h3>
                        
                        <div class="space-y-3">
                            <a href="/go/bitmex" target="_blank" rel="nofollow noopener noreferrer" class="flex items-center gap-4 p-4 rounded-xl bg-gray-950/50 hover:bg-gray-800/80 border border-gray-800 hover:border-gray-700 transition-all group">
                                <div class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center text-sm font-bold text-gray-300 group-hover:text-yellow-400 transition-colors">BM</div>
                                <div class="flex-1">
                                    <h4 class="font-semibold text-white text-sm group-hover:text-yellow-400 transition-colors">BitMEX</h4>
                                    <p class="text-xs text-gray-500">Sinds 2014 Â· Laagste fees</p>
                                </div>
                                <span class="text-gray-600 group-hover:text-yellow-500 transition-colors text-sm">â†’</span>
                            </a>
                             <a href="/go/bybit" target="_blank" rel="nofollow noopener noreferrer" class="flex items-center gap-4 p-4 rounded-xl bg-gray-950/50 hover:bg-gray-800/80 border border-gray-800 hover:border-gray-700 transition-all group">
                                <div class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center text-sm font-bold text-gray-300 group-hover:text-yellow-400 transition-colors">BB</div>
                                <div class="flex-1">
                                    <h4 class="font-semibold text-white text-sm group-hover:text-yellow-400 transition-colors">Bybit</h4>
                                    <p class="text-xs text-gray-500">Sinds 2018 Â· Gebruiksvriendelijk</p>
                                </div>
                                <span class="text-gray-600 group-hover:text-yellow-500 transition-colors text-sm">â†’</span>
                            </a>
                        </div>
                    </div>

                    <!-- Disclaimer box -->
                     <div class="bg-gray-900/50 rounded-2xl p-5 border border-gray-800/60">
                        <h4 class="font-semibold text-gray-300 text-sm mb-2">ðŸ“‹ Disclaimer</h4>
                        <p class="text-xs text-gray-500 leading-relaxed">
                            Dit artikel bevat affiliate links. Dit betekent dat wij een kleine commissie kunnen ontvangen als je je aanmeldt via een van onze links â€” zonder extra kosten voor jou. Wij bespreken alleen platformen die wij zelf hebben getest.
                        </p>
                    </div>
                </div>
            </aside>
        </div>
    </div>

    <style>
        /* ===== Article Typography ===== */
        .article-content {
            font-family: 'Outfit', sans-serif;
            font-weight: 400;
            color: #cbd5e1; /* slate-300 â€” good contrast on dark */
        }

        /* --- Paragraphs --- */
        .article-content :global(p) {
            font-size: 1.125rem;       /* 18px */
            line-height: 1.9;
            margin-bottom: 1.75rem;
            color: #cbd5e1;
        }

        /* --- Headings --- */
        .article-content :global(h2) {
            font-size: 1.75rem;        /* 28px */
            font-weight: 700;
            color: #f1f5f9;            /* slate-100 */
            margin-top: 3.5rem;
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid rgba(148, 163, 184, 0.15);
            letter-spacing: -0.01em;
            line-height: 1.3;
        }

        .article-content :global(h3) {
            font-size: 1.375rem;       /* 22px */
            font-weight: 600;
            color: #e2e8f0;            /* slate-200 */
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            line-height: 1.35;
        }

        .article-content :global(h4) {
            font-size: 1.125rem;
            font-weight: 600;
            color: #e2e8f0;
            margin-top: 2rem;
            margin-bottom: 0.75rem;
        }

        /* First heading after top of article â€” less top margin */
        .article-content > :global(:first-child) {
            margin-top: 0;
        }

        /* --- Links --- */
        .article-content :global(a) {
            color: #fbbf24;            /* amber-400 */
            font-weight: 500;
            text-decoration: none;
            transition: color 0.15s;
        }
        .article-content :global(a:hover) {
            color: #fcd34d;            /* amber-300 */
            text-decoration: underline;
        }

        /* --- Bold / Strong --- */
        .article-content :global(strong) {
            color: #f8fafc;            /* slate-50 */
            font-weight: 600;
        }

        /* --- Italic / Emphasis --- */
        .article-content :global(em) {
            color: #94a3b8;            /* slate-400 */
            font-style: italic;
        }

        /* --- Blockquotes --- */
        .article-content :global(blockquote) {
            border-left: 3px solid rgba(251, 191, 36, 0.5);
            background: rgba(15, 23, 42, 0.5);
            padding: 1.25rem 1.5rem;
            margin: 2rem 0;
            border-radius: 0 0.75rem 0.75rem 0;
        }
        .article-content :global(blockquote p) {
            font-size: 1rem;
            line-height: 1.75;
            color: #94a3b8;            /* slate-400 */
            margin-bottom: 0;
        }
        .article-content :global(blockquote strong) {
            color: #fbbf24;
        }

        /* --- Unordered Lists --- */
        .article-content :global(ul) {
            list-style: none;
            padding-left: 0;
            margin: 1.5rem 0 2rem;
        }
        .article-content :global(ul > li) {
            position: relative;
            padding-left: 1.75rem;
            margin-bottom: 0.875rem;
            font-size: 1.0625rem;      /* 17px */
            line-height: 1.8;
            color: #cbd5e1;
        }
        .article-content :global(ul > li::before) {
            content: '';
            position: absolute;
            left: 0;
            top: 0.7em;
            width: 7px;
            height: 7px;
            background: rgba(251, 191, 36, 0.6);
            border-radius: 50%;
        }

        /* --- Ordered Lists --- */
        .article-content :global(ol) {
            padding-left: 1.5rem;
            margin: 1.5rem 0 2rem;
            counter-reset: item;
            list-style: none;
        }
        .article-content :global(ol > li) {
            position: relative;
            padding-left: 1rem;
            margin-bottom: 0.875rem;
            font-size: 1.0625rem;
            line-height: 1.8;
            color: #cbd5e1;
            counter-increment: item;
        }
        .article-content :global(ol > li::before) {
            content: counter(item) '.';
            position: absolute;
            left: -1.25rem;
            color: #fbbf24;
            font-weight: 600;
            font-size: 1rem;
        }

        /* Nested list items â€” smaller */
        .article-content :global(li ul),
        .article-content :global(li ol) {
            margin-top: 0.5rem;
            margin-bottom: 0.5rem;
        }

        /* --- Tables --- */
        .article-content :global(table) {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin: 2rem 0 2.5rem;
            font-size: 0.9375rem;      /* 15px */
            border-radius: 0.75rem;
            overflow: hidden;
            border: 1px solid rgba(148, 163, 184, 0.12);
        }
        .article-content :global(thead) {
            background: rgba(15, 23, 42, 0.8);
        }
        .article-content :global(th) {
            text-align: left;
            padding: 0.875rem 1rem;
            font-weight: 600;
            color: #e2e8f0;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.04em;
            border-bottom: 1px solid rgba(148, 163, 184, 0.15);
        }
        .article-content :global(td) {
            padding: 0.75rem 1rem;
            color: #cbd5e1;
            border-bottom: 1px solid rgba(148, 163, 184, 0.07);
            line-height: 1.5;
        }
        .article-content :global(tbody tr:last-child td) {
            border-bottom: none;
        }
        .article-content :global(tbody tr:nth-child(even)) {
            background: rgba(15, 23, 42, 0.3);
        }
        .article-content :global(tbody tr:hover) {
            background: rgba(15, 23, 42, 0.5);
        }

        /* --- Horizontal Rules --- */
        .article-content :global(hr) {
            border: none;
            height: 1px;
            background: rgba(148, 163, 184, 0.12);
            margin: 3rem 0;
        }

        /* --- Images --- */
        .article-content :global(img) {
            border-radius: 0.75rem;
            margin: 2rem 0;
        }

        /* --- Inline Code --- */
        .article-content :global(code) {
            background: rgba(15, 23, 42, 0.6);
            padding: 0.15em 0.4em;
            border-radius: 0.25rem;
            font-size: 0.875em;
            color: #fbbf24;
        }

        /* --- CTA containers in the article --- */
        .article-content :global(.my-6),
        .article-content :global(.my-8) {
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
    </style>

    <script type="application/ld+json" slot="head" set:html={JSON.stringify([
        {
            "@context": "https://schema.org",
            "@type": "BlogPosting",
            "headline": post.data.title,
            "image": [post.data.heroImage],
            "datePublished": post.data.pubDate.toISOString(),
            "dateModified": post.data.updatedDate?.toISOString() || post.data.pubDate.toISOString(),
            "author": [{
                "@type": "Person",
                "name": "Redactie",
                "url": "https://shortnews.tech"
            }]
        },
        {
            "@context": "https://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement": [{
                "@type": "ListItem",
                "position": 1,
                "name": "Home",
                "item": "https://shortnews.tech"
            },{
                "@type": "ListItem",
                "position": 2,
                "name": "Blog",
                "item": "https://shortnews.tech/blog"
            },{
                "@type": "ListItem",
                "position": 3,
                "name": post.data.title
            }]
        }
    ])} />
</Layout>
