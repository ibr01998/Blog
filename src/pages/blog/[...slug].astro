---

import { getCollection } from 'astro:content';
import { db, Post, Platform, eq, inArray } from 'astro:db';
import { Markdown } from 'astro-remote';
import Layout from '../../layouts/Layout.astro';
import CtaButton from '../../components/CtaButton.astro';

const { slug } = Astro.params;
if (!slug) {
	return Astro.redirect('/404');
}

let post, Content, isDb = false, dbContent = '';

// 1. Check DB
const dbPosts = await db.select().from(Post).where(eq(Post.slug, slug));
const dbPost = dbPosts.at(0);

if (dbPost) {
    // Check visibility
    if (dbPost.status === 'draft') {
        return Astro.redirect('/404');
    }

    post = { data: dbPost };
    isDb = true;
    // Cleanup content: remove frontmatter and imports
    dbContent = dbPost.body
        .replace(/^---[\s\S]*?---/, '') // Remove frontmatter
        .replace(/import .*?;/g, '')     // Remove imports
        .trim();
} else {
    // 2. Check File Collection
    const posts = await getCollection('blog');
    const filePost = posts.find((p) => p.slug === slug);

    if (!filePost) {
        return Astro.redirect('/404');
    }
    post = filePost;
    const renderResult = await filePost.render();
    Content = renderResult.Content;
}

// Get platforms for sidebar
let sidebarPlatforms: any[] = [];
const platformSlugs = post.data.platforms;
if (platformSlugs && Array.isArray(platformSlugs) && platformSlugs.length > 0) {
    try {
        sidebarPlatforms = await db.select().from(Platform).where(inArray(Platform.slug, platformSlugs));
    } catch {
        // Platform table query failed — don't break the page
    }
}
---

<Layout title={post.data.title} description={post.data.description} image={post.data.heroImage} type="article">

    <!-- Hero: Duotone Image -->
    {post.data.heroImage && (
    <div class="relative w-full h-[320px] md:h-[450px] overflow-hidden duotone-navy">
        <img width={1920} height={1080} src={post.data.heroImage} alt="" class="w-full h-full object-cover" />
    </div>
    )}

    <!-- Article Header -->
    <div class="bg-[var(--cream)] px-4">
        <div class="container mx-auto max-w-4xl py-10 md:py-14">
            <!-- Breadcrumbs -->
            <nav class="flex text-sm text-muted mb-6" aria-label="Breadcrumb">
                <a href="/" class="hover:text-navy transition-colors">Home</a>
                <span class="mx-2 opacity-40">/</span>
                <a href="/blog" class="hover:text-navy transition-colors">Blog</a>
                <span class="mx-2 opacity-40">/</span>
                <span class="text-navy font-medium truncate max-w-[200px] md:max-w-sm">{post.data.title}</span>
            </nav>

            <!-- Date Badge -->
            <span class="date-badge mb-5 inline-block">
                {post.data.pubDate.toLocaleDateString('nl-NL', {
                    day: 'numeric', month: 'long', year: 'numeric'
                })}
            </span>

            <h1 class="text-4xl md:text-6xl font-extrabold text-navy leading-[1.1] tracking-tight mb-6">
                {post.data.title}
            </h1>

            <div class="flex items-center gap-3 text-sm text-muted">
                <span class="font-semibold text-navy">Redactie</span>
                <span class="opacity-40">·</span>
                <span>6 min leestijd</span>
            </div>
        </div>
    </div>

    <!-- Divider -->
    <div class="section-divider"></div>

    <!-- Article Body + Sidebar -->
    <div class="container mx-auto max-w-7xl px-4 py-12 md:py-20">
        <div class="flex flex-col lg:flex-row gap-16">
            
            <!-- Main Content -->
            <article class="lg:w-2/3 article-content">
                {isDb ? <Markdown content={dbContent} components={{ CtaButton }} /> : <Content />}
            </article>

            <!-- Sidebar -->
            <aside class="lg:w-1/3 space-y-8">
                <div class="sticky top-24 space-y-6">

                    <!-- In this article -->
                    <div class="border border-theme bg-[var(--cream)] p-6">
                        <h3 class="text-xs font-bold text-navy uppercase tracking-[0.15em] mb-4">In dit artikel</h3>
                        <p class="text-sm text-muted leading-relaxed">
                            {post.data.description}
                        </p>
                    </div>

                    <!-- Platforms in this article -->
                    {sidebarPlatforms.length > 0 && (
                    <div class="border border-theme bg-white p-6">
                        <h3 class="text-xs font-bold text-navy uppercase tracking-[0.15em] mb-5">
                             Platformen
                        </h3>
                        
                        <div class="space-y-3">
                            {sidebarPlatforms.map((p: any) => (
                                <a href={`/go/${p.slug}`} target="_blank" rel="nofollow noopener noreferrer" class="flex items-center gap-3 p-3 border border-theme hover:bg-[var(--cream)] transition-colors group">
                                    <div class="w-9 h-9 bg-navy text-cream flex items-center justify-center text-xs font-bold">{p.name.substring(0, 2).toUpperCase()}</div>
                                    <div class="flex-1">
                                        <h4 class="font-bold text-navy text-sm">{p.name}</h4>
                                        <p class="text-xs text-muted">{p.shortDescription ? p.shortDescription.substring(0, 40) + '...' : 'Review'}</p>
                                    </div>
                                    <span class="text-muted group-hover:text-navy transition-colors text-sm">&rarr;</span>
                                </a>
                            ))}
                        </div>
                    </div>
                    )}

                    <!-- Disclaimer -->
                    <div class="border border-theme p-5 bg-[var(--cream)]">
                        <h4 class="font-bold text-navy text-xs uppercase tracking-wider mb-2">Disclaimer</h4>
                        <p class="text-xs text-muted leading-relaxed">
                            Dit artikel bevat affiliate links. Wij ontvangen een commissie als je je via onze links aanmeldt, zonder extra kosten voor jou.
                        </p>
                    </div>
                </div>
            </aside>
        </div>
    </div>

    <style>
        /* ===== Article Typography ===== */
        .article-content {
            font-family: 'Outfit', sans-serif;
            font-weight: 400;
            color: var(--text-muted); 
        }

        .article-content :global(p) {
            font-size: 1.125rem;
            line-height: 1.85;
            margin-bottom: 1.75rem;
            color: #3a4a5c;
        }
        
        .article-content :global(p:first-of-type) {
            font-size: 1.2rem;
            color: var(--navy);
            font-weight: 500;
        }

        .article-content :global(h2) {
            font-size: 1.75rem;
            font-weight: 800;
            color: var(--navy);
            margin-top: 3.5rem;
            margin-bottom: 1.25rem;
            letter-spacing: -0.02em;
            line-height: 1.2;
        }

        .article-content :global(h3) {
            font-size: 1.375rem;
            font-weight: 700;
            color: var(--navy);
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            line-height: 1.3;
        }

        .article-content :global(h4) {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--navy);
            margin-top: 2rem;
            margin-bottom: 0.75rem;
        }

        .article-content :global(a) {
            color: var(--navy);
            font-weight: 600;
            text-decoration: underline;
            text-underline-offset: 3px;
            text-decoration-color: rgba(27, 45, 79, 0.3);
            transition: opacity 0.2s;
        }
        .article-content :global(a:hover) {
            opacity: 0.6;
        }

        .article-content :global(strong) {
            color: var(--navy);
            font-weight: 700;
        }

        .article-content :global(em) {
            color: var(--text-muted);
            font-style: italic;
        }

        .article-content :global(blockquote) {
            border-left: 3px solid var(--navy);
            padding-left: 1.5rem;
            margin: 2.5rem 0;
            font-style: italic;
            font-size: 1.125rem;
            color: var(--navy);
        }
        .article-content :global(blockquote p) {
            font-size: 1.125rem !important;
            color: var(--navy) !important;
            margin-bottom: 0;
        }

        .article-content :global(ul), .article-content :global(ol) {
            margin: 1.5rem 0 2rem;
            padding-left: 1.5rem;
            color: #3a4a5c;
        }
        .article-content :global(ul) { list-style-type: disc; }
        .article-content :global(ol) { list-style-type: decimal; }
        .article-content :global(li) {
            margin-bottom: 0.75rem;
            padding-left: 0.5rem;
            font-size: 1.0625rem;
            line-height: 1.75;
        }
        .article-content :global(li::marker) {
            color: var(--navy);
            font-weight: bold;
        }

        .article-content :global(table) {
            width: 100%;
            border-collapse: collapse;
            margin: 2.5rem 0;
            border: 1px solid var(--border-color);
            overflow: hidden;
            font-size: 0.95rem;
        }
        .article-content :global(thead) {
            background: var(--navy);
            color: var(--cream);
        }
        .article-content :global(th) {
            text-align: left;
            padding: 0.875rem 1rem;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
        }
        .article-content :global(td) {
            padding: 0.875rem 1rem;
            border-bottom: 1px solid var(--border-color);
            color: #3a4a5c;
        }
        .article-content :global(tbody tr:last-child td) {
            border-bottom: none;
        }

        .article-content :global(img) {
            margin: 2.5rem 0;
            border: 1px solid var(--border-color);
            filter: grayscale(100%) contrast(1.05);
            transition: filter 0.3s;
        }
        .article-content :global(img:hover) {
            filter: grayscale(0%);
        }

        .article-content :global(hr) {
            border: none;
            height: 1px;
            background: var(--border-color);
            margin: 3rem 0;
        }
    </style>

    <script type="application/ld+json" slot="head" set:html={JSON.stringify([
        {
            "@context": "https://schema.org",
            "@type": "BlogPosting",
            "headline": post.data.title,
            "image": [post.data.heroImage],
            "datePublished": post.data.pubDate.toISOString(),
            "dateModified": post.data.updatedDate?.toISOString() || post.data.pubDate.toISOString(),
            "author": [{
                "@type": "Person",
                "name": "Redactie",
                "url": "https://shortnews.tech"
            }]
        },
        {
            "@context": "https://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement": [{
                "@type": "ListItem",
                "position": 1,
                "name": "Home",
                "item": "https://shortnews.tech"
            },{
                "@type": "ListItem",
                "position": 2,
                "name": "Blog",
                "item": "https://shortnews.tech/blog"
            },{
                "@type": "ListItem",
                "position": 3,
                "name": post.data.title
            }]
        }
    ])} />
</Layout>
