---
import Layout from '../layouts/Layout.astro';
import CtaButton from '../components/CtaButton.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

export const prerender = true;
---

<Layout title="404 - Pagina Niet Gevonden" description="De opgevraagde pagina bestaat niet.">
	<div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
		<h1 class="text-[10rem] font-extrabold text-navy opacity-10 leading-none mb-0">404</h1>
		<h2 class="text-3xl md:text-4xl font-bold text-navy mb-6 -mt-8">Pagina niet gevonden</h2>
		<p class="text-lg text-muted mb-10 max-w-lg">
			De link die je volgde is mogelijk gebroken of de pagina is verwijderd.
		</p>
		<div class="flex flex-col sm:flex-row gap-4">
			<CtaButton href="/" title="Terug naar Home" subtitle="" />
		</div>
	</div>
</Layout>
